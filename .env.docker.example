# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5000
AllowedHosts=*

# Database Configuration
UseInMemoryDatabase=false
ConnectionStrings__DefaultConnection=Host=postgres;Port=5432;Database=filesyncdb;Username=postgres;Password=your_secure_password

# S3 Configuration
S3__Region=eu-west-1
S3__BucketName=your-bucket-name
S3__ServiceUrl=
S3__MaxFileSizeMb=100

# AWS Credentials (Required for S3)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning
Logging__LogLevel__Microsoft.EntityFrameworkCore.Database.Command=Information

# Optional: For MinIO or LocalStack (local S3 alternatives)
# S3__ServiceUrl=http://minio:9000
# AWS_ACCESS_KEY_ID=minioadmin
# AWS_SECRET_ACCESS_KEY=minioadmin
